# =============================================
# AI File System - Local Development
# =============================================
# Local development configuration
# =============================================

# Application Settings
APP_NAME="AI File System - Development"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="DEBUG"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# Security (Change these in production!)
SECRET_KEY="dev-secret-key-change-in-production-2024"
ALLOWED_ORIGINS='["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8000"]'

# File Processing
MAX_FILE_SIZE_MB=10
MAX_WORKERS=2
TEMP_DIR="./temp"

# AI Services - Ollama (Local)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="mistral"
OLLAMA_TIMEOUT=30

# AI Services - Optional Cloud (Comment out if not using)
# OPENAI_API_KEY=""
# ANTHROPIC_API_KEY=""

DEFAULT_AI_PROVIDER="ollama"
ENABLE_AI_FEATURES=true

# RAG & Vector Store
CHROMA_DB_PATH="./data/chroma_db"
EMBEDDING_MODEL="all-MiniLM-L6-v2"

# Database
DATABASE_URL="sqlite:///./data/development.db"
DATABASE_ECHO=true

# Tool Configuration
ENABLE_FILE_TOOLS=true
ENABLE_CONVERSION_TOOLS=true
ENABLE_IMAGE_TOOLS=true
ENABLE_TEXT_TOOLS=true
ENABLE_WEB_TOOLS=true
ENABLE_SYSTEM_TOOLS=true

# Performance
MAX_MEMORY_PERCENT=70
CACHE_SIZE_MB=256

# Logging
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_FILE_PATH="./data/logs/development.log"

# Development Features
ENABLE_SWAGGER=true
ENABLE_API_DOCS=true
AUTO_RELOAD=true